<!-- Edit  -->
<section id="viewEditdestination">
    <h2>Edit existing destination</h2>
    <form id="formAdddestination" action="#/edit/:id" method="PUT">
        <label for="destination">Destination name:</label>
        <input type="text" id="destination" name="newDestination" value="{{destination}}">
        <label for="city">City:</label>
        <input type="text" id="city" name="newCity" value={{city}}>
        <label for="duration">Duration:</label>
        <input type="number" id="duration" name="newDuration" value={{duration}}>
        <label for="departureDate">Departure Date:</label>
        <input type="date" id="departureDate" name="newDepDate" value={{depDate}}>
        <label for="imgUrl">Image:</label>
        <input type="text" id="imgUrl" name="newImageUrl"
            value={{imageUrl}}>

        <input type="submit" class="create" value="Edit">
    </form>
</section>